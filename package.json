{
	"name": "runner",
	"displayName": "runner",
	"description": "code runner",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.76.0"
	},
	"publisher": "morningstart",
	"icon": "images/terminal.png",
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "runner.run",
				"title": "Runner: Run"
			}
		],
		"keybindings": {
			"command": "runner.run",
			"key": "ctrl+shift+r",
			"mac": "cmd+shift+r",
			"when": "editorTextFocus"
		},
		"configuration": {
			"type": "object",
			"title": "Runner",
			"properties": {
				"runner.commands": {
					"type": "object",
					"markdownDescription": "Enable user to customize command without json. template like `languageId:command` ",
					"default": {
						"javascript": "node",
						"typescript": "ts-node",
						"python": "python"
					},
					"additionalProperties": {
						"type": "string"
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.76.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.34.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5",
		"@vscode/test-electron": "^2.2.3"
	}
}
