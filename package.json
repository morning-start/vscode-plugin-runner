{
	"name": "runner-morningstart",
	"displayName": "File Runner",
	"description": "runner for signal file",
	"version": "0.3.0",
	"keywords": [
		"code runner",
		"runner",
		"morningstart",
		"vscode",
		"javascript",
		"typescript",
		"php",
		"rust",
		"kotlin",
		"objective-c",
		"kotlinscript"
	],
	"engines": {
		"vscode": "^1.109.0"
	},
	"publisher": "morningstart",
	"icon": "images/terminal.png",
	"categories": [
		"Other"
	],
	"repository": "https://github.com/morning-start/vscode-plugin-runner",
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "runner.run",
				"title": "Run Code",
				"category": "Runner",
				"icon": "$(play)"
			},
			{
				"command": "runner.clearOutDir",
				"title": "Clear Out Dir",
				"category": "Runner"
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"command": "runner.run",
					"when": "editorLangId in config.runner.runCommands || editorLangId in config.runner.compileCommands || editorLangId == objective-c"
				}
			]
		},
		"keybindings": {
			"command": "runner.run",
			"key": "ctrl+alt+r",
			"mac": "cmd+alt+r",
			"when": "editorTextFocus"
		},
		"configuration": {
			"type": "object",
			"title": "Runner",
			"properties": {
				"runner.runCommands": {
					"type": "object",
					"markdownDescription": "直接运行的命令配置 `languageId` : `command`。适用于解释型语言，如 JavaScript、Python 等。使用 `<file>` 作为文件路径占位符。",
					"default": {
						"javascript": "node <file>",
						"typescript": "ts-node <file>",
						"python": "python <file>",
						"go": "go run <file>",
						"kotlinscript": "kotlinc -script <file>"
					},
					"additionalProperties": {
						"type": "string"
					}
				},
				"runner.compileCommands": {
					"type": "object",
					"markdownDescription": "需要编译后运行的命令配置。适用于编译型语言，如 C、C++、Rust、Kotlin 等。支持以下占位符：\n- `<file>`: 源文件路径\n- `<out>`: 输出文件路径（不含扩展名）\n- `<outDir>`: 输出目录",
					"default": {
						"c": {
							"compile": "gcc <file> -o <outDir>/<out>",
							"run": "<outDir>/<out>"
						},
						"cpp": {
							"compile": "g++ <file> -o <outDir>/<out>",
							"run": "<outDir>/<out>"
						},
						"rust": {
							"compile": "rustc <file> -o <outDir>/<out>",
							"run": "<outDir>/<out>"
						},
						"kotlin": {
							"compile": "kotlinc <file> -include-runtime -d <outDir>/<out>.jar",
							"run": "java -jar <outDir>/<out>.jar"
						}
					},
					"additionalProperties": {
						"type": "object",
						"properties": {
							"compile": {
								"type": "string",
								"description": "编译命令"
							},
							"run": {
								"type": "string",
								"description": "运行命令"
							}
						},
						"required": ["compile", "run"]
					}
				},
				"runner.compileOutDir": {
					"type": "string",
					"default": "out",
					"description": "编译输出目录（相对路径）"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.109.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^16.18.126",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.57.1",
		"glob": "^8.1.0",
		"mocha": "^10.8.2",
		"typescript": "^4.9.5",
		"@vscode/test-electron": "^2.5.2"
	}
}
