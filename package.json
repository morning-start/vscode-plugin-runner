{
	"name": "runner-morningstart",
	"displayName": "V-runner",
	"description": "code runner except official(Mircosoft) code runner",
	"version": "0.0.1",
	"keywords": [
		"code runner",
		"runner",
		"morningstart",
		"vscode",
		"javascript",
		"typescript",
		"php"
	],
	"engines": {
		"vscode": "^1.76.0"
	},
	"publisher": "morningstart",
	"icon": "images/terminal.png",
	"categories": [
		"Other"
	],
	"repository": "https://github.com/morning-start/vscode-plugin-runner",
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "runner.run",
				"title": "Run Code",
				"category": "Runner",
				"icon": "$(play)"
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"command": "runner.run",
					"when": "editorLangId in config.runner.commands"
				}
			]
		},
		"keybindings": {
			"command": "runner.run",
			"key": "ctrl+alt+r",
			"mac": "cmd+alt+r",
			"when": "editorTextFocus"
		},
		"configuration": {
			"type": "object",
			"title": "Runner",
			"properties": {
				"runner.commands": {
					"type": "object",
					"markdownDescription": "Enable user to customize command without json. template like `languageId:command` ",
					"default": {
						"javascript": "node",
						"typescript": "ts-node",
						"go": "go run",
						"r": "Rscript",
						"php": "php"
					},
					"additionalProperties": {
						"type": "string"
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.76.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.34.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5",
		"@vscode/test-electron": "^2.2.3"
	}
}
